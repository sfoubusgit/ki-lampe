[32m+[m[32mimport { NextRequest, NextResponse } from 'next/server'[m
[32m+[m
[32m+[m[32m/**[m
[32m+[m[32m * Newsletter API Route[m
[32m+[m[32m *[m[41m [m
[32m+[m[32m * Unterst√ºtzt zwei Modi:[m
[32m+[m[32m * 1. Mailchimp Integration (wenn MAILCHIMP_API_KEY gesetzt)[m
[32m+[m[32m * 2. Einfache E-Mail-Sammlung (E-Mails werden in Console geloggt)[m
[32m+[m[32m *[m[41m [m
[32m+[m[32m * Um Mailchimp zu nutzen:[m
[32m+[m[32m * 1. Erstelle einen Account auf mailchimp.com[m
[32m+[m[32m * 2. Erstelle eine Audience/Liste[m
[32m+[m[32m * 3. Hole dir den API Key: Account ‚Üí Extras ‚Üí API Keys[m
[32m+[m[32m * 4. Hole dir die Audience ID: Audience ‚Üí Settings ‚Üí Audience name and defaults[m
[32m+[m[32m * 5. Setze in .env:[m
[32m+[m[32m *    MAILCHIMP_API_KEY=dein-api-key[m
[32m+[m[32m *    MAILCHIMP_AUDIENCE_ID=deine-audience-id[m
[32m+[m[32m */[m
[32m+[m
[32m+[m[32mexport async function POST(request: NextRequest) {[m
[32m+[m[32m  try {[m
[32m+[m[32m    const { email } = await request.json()[m
[32m+[m
[32m+[m[32m    // Validierung[m
[32m+[m[32m    if (!email || !email.includes('@')) {[m
[32m+[m[32m      return NextResponse.json([m
[32m+[m[32m        { error: 'Bitte geben Sie eine g√ºltige E-Mail-Adresse ein.' },[m
[32m+[m[32m        { status: 400 }[m
[32m+[m[32m      )[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    const mailchimpApiKey = process.env.MAILCHIMP_API_KEY[m
[32m+[m[32m    const mailchimpAudienceId = process.env.MAILCHIMP_AUDIENCE_ID[m
[32m+[m
[32m+[m[32m    // Mailchimp Integration[m
[32m+[m[32m    if (mailchimpApiKey && mailchimpAudienceId) {[m
[32m+[m[32m      try {[m
[32m+[m[32m        // Extrahiere den Server-Prefix aus dem API Key (z.B. "us1" aus "xxxx-us1")[m
[32m+[m[32m        const serverPrefix = mailchimpApiKey.split('-')[1][m
[32m+[m[32m        if (!serverPrefix) {[m
[32m+[m[32m          throw new Error('Ung√ºltiger Mailchimp API Key Format')[m
[32m+[m[32m        }[m
[32m+[m[41m        [m
[32m+[m[32m        const mailchimpUrl = `https://${serverPrefix}.api.mailchimp.com/3.0/lists/${mailchimpAudienceId}/members`[m
[32m+[m
[32m+[m[32m        // Mailchimp verwendet Basic Auth: beliebiger Username, API Key als Password[m
[32m+[m[32m        const authString = Buffer.from(`anystring:${mailchimpApiKey}`).toString('base64')[m
[32m+[m
[32m+[m[32m        const response = await fetch(mailchimpUrl, {[m
[32m+[m[32m          method: 'POST',[m
[32m+[m[32m          headers: {[m
[32m+[m[32m            'Content-Type': 'application/json',[m
[32m+[m[32m            Authorization: `Basic ${authString}`,[m
[32m+[m[32m          },[m
[32m+[m[32m          body: JSON.stringify({[m
[32m+[m[32m            email_address: email,[m
[32m+[m[32m            status: 'subscribed',[m
[32m+[m[32m            status_if_new: 'subscribed',[m
[32m+[m[32m          }),[m
[32m+[m[32m        })[m
[32m+[m
[32m+[m[32m        if (!response.ok) {[m
[32m+[m[32m          const errorData = await response.json()[m
[32m+[m[32m          // Wenn E-Mail bereits existiert, ist das OK[m
[32m+[m[32m          if (response.status === 400 && errorData.title === 'Member Exists') {[m
[32m+[m[32m            return NextResponse.json([m
[32m+[m[32m              { message: 'Sie sind bereits f√ºr den Newsletter angemeldet!' },[m
[32m+[m[32m              { status: 200 }[m
[32m+[m[32m            )[m
[32m+[m[32m          }[m
[32m+[m[32m          throw new Error(errorData.detail || 'Mailchimp Fehler')[m
[32m+[m[32m        }[m
[32m+[m
[32m+[m[32m        return NextResponse.json([m
[32m+[m[32m          { message: 'Vielen Dank f√ºr Ihre Anmeldung!' },[m
[32m+[m[32m          { status: 200 }[m
[32m+[m[32m        )[m
[32m+[m[32m      } catch (error: any) {[m
[32m+[m[32m        console.error('Mailchimp Fehler:', error)[m
[32m+[m[32m        return NextResponse.json([m
[32m+[m[32m          { error: 'Fehler bei der Anmeldung. Bitte versuchen Sie es sp√§ter erneut.' },[m
[32m+[m[32m          { status: 500 }[m
[32m+[m[32m        )[m
[32m+[m[32m      }[m
[32m+[m[32m    }[m
[32m+[m
[32m+[m[32m    // Fallback: Einfache Logging (f√ºr Entwicklung)[m
[32m+[m[32m    console.log('Newsletter Anmeldung:', email)[m
[32m+[m[32m    console.log('HINWEIS: Mailchimp nicht konfiguriert. E-Mail wurde nur geloggt.')[m
[32m+[m[32m    console.log('Um Mailchimp zu nutzen, setze MAILCHIMP_API_KEY und MAILCHIMP_AUDIENCE_ID in .env')[m
[32m+[m
[32m+[m[32m    return NextResponse.json([m
[32m+[m[32m      { message: 'Vielen Dank f√ºr Ihre Anmeldung! (Demo-Modus)' },[m
[32m+[m[32m      { status: 200 }[m
[32m+[m[32m    )[m
[32m+[m[32m  } catch (error) {[m
[32m+[m[32m    console.error('Newsletter API Fehler:', error)[m
[32m+[m[32m    return NextResponse.json([m
[32m+[m[32m      { error: 'Ein Fehler ist aufgetreten. Bitte versuchen Sie es sp√§ter erneut.' },[m
[32m+[m[32m      { status: 500 }[m
[32m+[m[32m    )[m
[32m+[m[32m  }[m
[32m+[m[32m}[m
